<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Contacto</title>
    
</head>
<body>
    <%-include ('partials/navegationroles')%>
    
    <div class="contenedor-detalle">
        <h2>Detalle del Contacto</h2>
        
        <div id="detalle-contacto">
            <!-- Los datos se cargarán aquí con JavaScript -->
            <p>Cargando información...</p>
        </div>
        
        <button onclick="window.history.back()" class="btn-volver">Volver</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Obtener el ID de la URL
            const urlParams = new URLSearchParams(window.location.search);
            const idContacto = urlParams.get('id');
            
            if (idContacto) {
                fetch(`/api/personas/${idContacto}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            document.getElementById('detalle-contacto').innerHTML = 
                                `<p class="error">${data.error}</p>`;
                        } else {
                            document.getElementById('detalle-contacto').innerHTML = `
                               
                                <p><strong>Nombre:</strong> ${data.nombre} ${data.apellido}</p>
                    
                                <p><strong>Correo:</strong> ${data.correo}</p>
                                <p><strong>Teléfono:</strong> ${data.telefono}</p>
                                <p><strong>País:</strong> ${data.pais}</p>
                                <!-- Agrega más campos según necesites -->
                            `;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        document.getElementById('detalle-contacto').innerHTML = 
                            '<p class="error">Error al cargar los datos del contacto</p>';
                    });
            } else {
                document.getElementById('detalle-contacto').innerHTML = 
                    '<p class="error">No se proporcionó un ID de contacto</p>';
            }
        });
    </script>
</body>
</html>